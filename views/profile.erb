<div id="colone">

	<div id="postform">

			<h3>
				New Post
			</h3>

			<form method="POST" action="/posts/new">
				<br>
				<input type="text" name="title" placeholder="Post title..." size="36">
				<br>
				<textarea name="content" rows="2" cols="38" placeholder="Compose new post..."></textarea>
				<br>
				<input class="submit" type="submit" value="Post">
			</form>

	</div>

	<div id="links">
		<a class="sidelink" href="/following/<%= current_user.id %>">
			Following
		</a>
		<hr>
		<a class="sidelink" href="/followers/<%= current_user.id %>">
			Followers
		</a>
	</div>

</div>

<div id="coltwo">

	<div id="currentinfo">

		<img id="profileimage" src="Image.jpg"/>
		<p id="currentname">
			<%= current_user.fname %> <%= current_user.lname %>
		</p>
		<p id="currentusername">
			@<%= current_user.username %>
		</p>
		<p id="profileinfo">
			<span class="location"><%= current_user.profile.location if current_user.profile %></span><a class="website" href="http://<%= current_user.profile.website if current_user.profile %>"><%= current_user.profile.website if current_user.profile %></a>
		</p>

		<div id="countprofile">
			<div class="statsprofile">
				<a class="head" href="/profile">POSTS</a>
				<br>
				<span class="amount"><%= current_user.posts.count %></span>
			</div>
			<div class="statsprofile">
				<a class="head" href="/following/<%= current_user.id %>">FOLLOWING</a>
				<br>
				<span class="amount"><%= current_user.followed_users.count %></span>
			</div>
			<div class="statsprofile">
				<a class="head" href="/followers/<%= current_user.id %>">FOLLOWERS</a>
				<br>
				<span class="amount"><%= current_user.followers.count %></span>
			</div>
			<a href="/settings">
				<button id="editprofile">EDIT PROFILE</button>
			</a>
		</div>

	</div>

	<div id="profileposts">

		<h1>Posts</h1>

		<hr>

		<% current_user.posts.reverse.each do |post| %>
		<br>
		<div class="profileposts">
			<a class="usernamelink" href="/profile">
				@<%= current_user.username %></a>
			<br>
			<span class="posttitle"><%= post.title %></span>
			<br>
			<span class="postcontent"><%= post.content %></span>
			<br>
			<br>
		</div>
		<div class="postdel">
			<a class="deletepost" href="/deletepost/<%= post.id %>">DELETE POST</a>
		</div>
		<div class="clear">
		</div>
		<br>
		<hr>
		<% end %>

	</div>

</div>